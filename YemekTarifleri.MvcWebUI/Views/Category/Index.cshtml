@model YemekTarifleri.MvcWebUI.Models.CategoryViewModel

@{
    Layout = "../_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<br/>
@Html.ActionLink("Kategori Ekle", "Create", null, new { @class = "btn btn-success" })

<div class="widget-box">
    <div class="widget-title">
        <span class="icon"><i class="icon-th"></i></span>
        <h5>Data table</h5>
    </div>
    <div class="widget-content nopadding">

        <table class="table table-bordered data-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Kategori Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var category in Model.Categories)
                {
                    <tr class="gradeC">
                        <td>@category.Id</td>
                        <td>@category.CategoryName</td>
                        <td>
                            @Html.ActionLink("Düzenle", "Update", new { id = category.Id }, new { @class = "btn btn-info" }) |
                            @Html.ActionLink("Sil", "Delete", new { id = category.Id }, new { @class = "btn btn-danger" })
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
