@model YemekTarifleri.Entities.Concrete.Meal
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}
<div id="content-header">
    <div id="breadcrumb"> <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> </a></div>
</div>
<!--End-breadcrumbs-->
<!--Action boxes-->
<div class="container-fluid">

    <div class="container-fluid"><hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-info-sign"></i> </span>
                        <h5>Tarif Oluştur</h5>
                    </div>
                    <div class="widget-content nopadding">
                        @using (Html.BeginForm(Html.BeginForm("Create", "Meal", FormMethod.Post, new {enctype = "multipart/form-data", @class= "form-horizontal", name = "basic_validate" ,id = "basic_validate", novalidate = "novalidate" })))
                        {
             
                            <div class="control-group">
                                <label class="control-label">Kategori Adı</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CategoryId, new { htmlAttributes = new { name = "required", id = "required" } })
                                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Kullanıcı Adı</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { name = "required", id = "required" } })
                                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Yemek Adı</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { name = "required", id = "required" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Açıklama</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { name = "required", id = "required" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Pişirme Süresi</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CookingTime, new { htmlAttributes = new { name = "required", id = "required" } })
                                    @Html.ValidationMessageFor(model => model.CookingTime, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Kaç Kişilik</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.PersonQuantity, new { htmlAttributes = new { name = "required", id = "required" } })
                                    @Html.ValidationMessageFor(model => model.PersonQuantity, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Hazırlık Süresi</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.PreparationTime, new { htmlAttributes = new { name = "required", id = "required" } })
                                    @Html.ValidationMessageFor(model => model.PreparationTime, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        

                            <div class="control-group">
                                <label class="control-label">Resim</label>
                                <div class="col-md-10">
                                    <input type="file" id="image" name="image" class="form-control" accept=".jpg,.png" />
                                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-actions">
                                <input type="submit" value="Oluştur" class="btn btn-success">
                            </div>
             
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
